<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp">

    <androidx.appcompat.widget.SearchView
        android:id="@+id/app_search"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/bg_search_view"
        android:queryHint="Search for products and brands"
        android:iconifiedByDefault="false"
        android:elevation="10dp"
        android:tooltipText="@string/app_name"
        android:queryBackground="@android:color/transparent"
        />



    <LinearLayout
        android:id="@+id/llTextContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:paddingTop="15dp"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shop at stores for"
            android:textSize="12sp"
            android:fontFamily="@font/montserrat_medium"
            android:textColor="@color/black_75"/>

        <TextView
            android:id="@+id/tvQuery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Query"
            android:textColor="@color/colorPrimary"
            android:textSize="14sp"
            android:fontFamily="@font/montserrat_semibold"/>


    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/search_rvCategoryStores"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp" />


</LinearLayout>